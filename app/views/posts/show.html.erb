<h1><%= @post.title %></h1>
<h2>Creator: <%= @post.user.name %></h2>

<p><%= @post.body %></p>

<ul>
  <% if session[:user_id] == @post.user.id %>
    <li><%= link_to "Edit", edit_post_path(@post) %></li>
    <li><%= link_to "Destroy", post_path(@post), data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    } %></li>
  <% end %>
</ul>

<%= link_to "Back to posts", root_path %>
